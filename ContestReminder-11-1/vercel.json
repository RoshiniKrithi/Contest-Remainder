{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 20,
            "includeFiles": "dist/public/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.ts"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}