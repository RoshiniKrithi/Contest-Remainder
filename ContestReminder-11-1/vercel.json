{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 15,
            "includeFiles": "dist/public/**"
        }
    },
    "routes": [
        {
            "src": "/api/health",
            "dest": "api/index.ts"
        },
        {
            "src": "/api/(.*)",
            "dest": "api/index.ts"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/dist/public/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.ts"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}